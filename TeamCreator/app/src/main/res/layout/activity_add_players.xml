<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.golvmopp.teamcreator.AddPlayers"
    android:background="@drawable/select_players"
    android:orientation="horizontal">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="175dp"
        android:id="@+id/listView_Players"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">
        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_name"
            android:background="#FFFFFF"
            android:hint="Name"/>

        <ImageButton
            android:id="@+id/imageButton_AddName"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:src="@drawable/button_add"
            android:background="#ff0000" />

        <ImageButton
            android:id="@+id/imageButton_Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:src="@drawable/button_done"
            android:background="#ff0000"
            android:layout_marginRight="200dp" />

        <ImageButton
            android:id="@+id/imageButton_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/button_remove"
            android:background="#ff0000"
            android:adjustViewBounds="true"
            android:layout_alignTop="@+id/imageButton_Done"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <SearchView
            android:id="@+id/searchView_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText_name"
            android:layout_toRightOf="@+id/editText_name"
            android:layout_toEndOf="@+id/editText_name" />

    </RelativeLayout>
</RelativeLayout>

</LinearLayout>
