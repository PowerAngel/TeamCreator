<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/game_fyra_lag"
    tools:context="com.example.golvmopp.teamcreator.FourTeams">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/listView_Team1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="260dp"
        android:layout_marginRight="195dp"
        android:layout_marginLeft="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/listView_Team2"
        android:layout_alignTop="@+id/listView_Team1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="260dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="190dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_Team3"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView_Team1"
        android:layout_alignEnd="@+id/listView_Team1"
        android:layout_marginTop="320dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="gravity" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/listView_Team4"
        android:layout_alignBottom="@+id/listView_Team3"
        android:layout_alignRight="@+id/listView_Team2"
        android:layout_alignEnd="@+id/listView_Team2"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="200dp" />
</RelativeLayout>
